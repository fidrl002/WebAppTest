@model WebAppTest.ViewModels.ItemSearchViewModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center">Shop Items</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">Create New</a>
</p>

<form method="post" asp-controller="Items" asp-action="Index">
	<div class="row g-2">
		<div class="col-lg-10">
			<div class="input-group mb-3">
				<span class="input-group-text">Item Search</span>
				<input asp-for="SearchText" type="text" max-length="100" class="form-control" placeholder="Type here..."
					   title="Search by item name. Max 100 chars."/>
				<select asp-for="CategoryId" asp-items="Model.CategoryList" class="form-select" title="View items for a specific category">
					<option value="">All Categories...</option>
				</select>
			</div>
		</div>
		<div class="col-lg">
			<button type="submit" class="btn btn-outline-primary">Submit</button>
			<a asp-controller="Items" asp-action="Index" button="reset" class="btn btn-outline-danger">Reset</a>
		</div>
	</div>
</form>

<div>
	@{
		if (ViewBag.itemCount > 0)
		{
			<p>@ViewBag.itemCount @ViewBag.plural</p>
		}
		else
		{
			<h5 class="text-danger mb-4">No results were found!</h5>
		}
	}
</div>

<div class="row row-cols-4 g-4">
	@foreach (var item in Model.ItemList)
	{
		<div class="col col-sm-3">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">@Html.DisplayFor(modelItem => item.TheItem.ItemName)</h5>
					<p class="card-text">Category: @Html.DisplayFor(modelItem => item.TheItem.Category.CategoryName)</p>
					<p class="card-text">
						Description:
						@{
							if (item.TheItem.ItemDescription.Length > 100)
							{
								string shortDesc = item.TheItem.ItemDescription.Substring(0, 100).Trim() + "...";
								@Html.DisplayFor(modelItem => shortDesc);
							}
							else
							{
								@Html.DisplayFor(modelItem => item.TheItem.ItemDescription)
								;
							}
						}
					</p>
					<p class="card-text">Cost: @Html.DisplayFor(modelItem => item.TheItem.ItemCost)</p>
					<p>
						<img src="@Html.DisplayFor(modelItem => item.TheItem.ItemImage)" class="card-img-bottom" alt="@Html.DisplayFor(modelItem => item.TheItem.ItemName)" />
					</p>
					<p class="card-text">
						Rating:
						@if(item.ReviewCount > 0)
						{
							<span>@Html.DisplayFor(r => item.AvgRating) across @item.ReviewCount Reviews</span>
						}
						else
						{
							<span>This item has not been reviewed</span>
						}
					</p>
					<a asp-action="Details" asp-controller="Items" asp-route-id="@item.TheItem.ItemId" class="btn btn-primary">View Item Details</a>
				</div>
			</div>
		</div>
	}
</div>

